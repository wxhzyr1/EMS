@Preview
@Component
struct HmToggle{
  @BuilderParam
  componentsContent:()=>void
  @State
  toggleClose:boolean=false
  title:string=""
  build() {
    Column(){
      Row(){
        Text(this.title).fontSize(16).fontColor($r('app.color.text_primary')).fontWeight(600)
        Image(this.toggleClose?$r('app.media.ic_btn_add'):$r('app.media.ic_btn_cut')).width(24).height(24)
      }.justifyContent(FlexAlign.SpaceBetween).width('100%')
      .height(30).onClick(()=>{
        animateTo({duration:500},()=>{
          this.toggleClose=!this.toggleClose
        })
      }).border({
        width:{
          bottom:this.toggleClose?0:1
        },
        color:$r('app.color.gray_1')
      })
      if(this.componentsContent&&!this.toggleClose)
      this.componentsContent()
    }.padding(19.5).margin({
      left:15,
      top:15,
      right:15
    }).backgroundColor($r('app.color.white'))
  }
}
export{
  HmToggle
}